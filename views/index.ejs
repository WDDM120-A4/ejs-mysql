<%- include('partials/header.ejs'); -%>
<h1>Homepage</h1>


<% if (data.length > 0) { %>
    <table>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Warehouse</th>
            <th>Manufacturing Date</th>
            <th>Product Cost</th>
          </tr>
        <% data.forEach(result => { %>
            <form action="/delete-product-submit" method="post">
                <input type="hidden" name="id" value="<%= result.id %>">
                <tr id="<%= result.id %>">
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.id %>" disabled/></th>
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.product_name %>" disabled/></th>
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.category %>" disabled/></th>
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.quantity %>" disabled/></th>
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.warehouse %>" disabled/></th>
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.manufacturing_date %>" disabled/></th>
                        <th><input type="text" id="<%= result.id %>" name="<%= result.id %>" value="<%= result.product_cost %>" disabled/></th>
                        <th><button type="submit">‚ùå</button></th>
                        <th><a href="/product/<%= result.id %>">EDIT</a></th>
                </tr>
            </form>
       
        <% }) %> 
        </table>
<% } else { %>
    <h3>No data</h3>
<% } %>

