<%- include('partials/header'); -%>


<div class="container">
    
    <div class="row">
        
        <div class="col mt-5">
            <h3 class="mt-2">Product Info</h3>
            <h6 class="mt-3">Product Name:</h6><p class="bg-light text-dark w-75"><%= result.product_name %></p> 
            <h6>ID Number: </h6><p class="bg-light text-dark w-75"><%= result.id %></p>
            <h6>Category:</h6><p class="bg-light text-dark w-75"><%= result.category %></p>
            <h6>Quantity:</h6><p class="bg-light text-dark w-75"><%= result.quantity %></p>
            <h6>Warehouse:</h6><p class="bg-light text-dark w-75"><%= result.warehouse %></p>
            <h6>Product Cost:</h6><p class="bg-light text-dark w-75"><%= result.product_cost %></p>
            <h6>Date:</h6><p class="bg-light text-dark w-75"><%= result.manufacturing_date %></p>
        </div>
    
    
        <div class="col mt-5">
            <form action="/update-inventory" method="post" style="margin-bottom: 20px;">
                <h3 class="mt-2">Update Product Info:</h3>
                <input class="form-control w-75" type="hidden" name="id" value="<%= result.id %>">

                <div class="form-group">
                    <label for="product_name" class="mt-2"> Product name: </label>
                    <input type="text" class="form-control w-75" id="product_name" name="product_name" value="<%= result.product_name %>" required/><br />
                </div>
                
                <div class="form-group">
                    <label for="category"> Category: </label>
                    <input type="text" class="form-control w-75" id="category" name="category" value="<%= result.category %>" required/><br />
                </div>
                

                <div class="form-group">
                    <label for="quantity"> Quantity </label>
                    <input type="text" class="form-control w-75" id="quantity" name="quantity" value="<%= result.quantity %>" required/><br />
                </div>
                

                <div class="form-group">
                    <label for="warehouse"> Warehouse: </label>
                    <input type="text" class="form-control w-75" id="warehouse" name="warehouse" value="<%= result.warehouse %>" required/><br />
                </div>
                

                <div class="form-group">
                    <label for="product_cost"> Product Cost: </label>
                    <input type="text" class="form-control w-75" id="product_cost" name="product_cost" value="<%= result.product_cost %>" required/><br />
                </div>
                

                <input type="submit" class="btn btn-primary" />

            </form>

        </div>
    </div>
</div>

